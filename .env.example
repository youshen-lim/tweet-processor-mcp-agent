# Tweet Processor - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# LLM Provider: 'anthropic' or 'openai'
LLM_PROVIDER=anthropic

# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI API Configuration (if using OpenAI)
# Get your API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4

# =============================================================================
# GOOGLE DRIVE CONFIGURATION
# =============================================================================

# Google Drive Document ID containing your newsletter articles
#
# HOW TO GET YOUR DOCUMENT ID:
# 1. Open your Google Drive document in a web browser
# 2. Look at the URL in the address bar:
#    https://docs.google.com/document/d/1a2b3c4d5e6f7g8h9i0j1k2l3m4n5o6p7q8r9s0t/edit
#                                      ^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^
#                                      This part is your Document ID
# 3. Copy the Document ID and paste it below
#
# EXAMPLE:
# GOOGLE_DRIVE_DOCUMENT_ID=1a2b3c4d5e6f7g8h9i0j1k2l3m4n5o6p7q8r9s0t
#
# IMPORTANT: Replace 'your_document_id_here' with your actual document ID
GOOGLE_DRIVE_DOCUMENT_ID=your_document_id_here

# Google Drive Service Account Credentials
# Path to your service account JSON file
GOOGLE_DRIVE_CREDENTIALS_PATH=credentials/google-drive-credentials.json

# =============================================================================
# TWITTER/X API CONFIGURATION
# =============================================================================

# Twitter API Credentials (OAuth 1.0a)
# Get credentials from: https://developer.twitter.com/en/portal/dashboard

# API Key (Consumer Key)
TWITTER_API_KEY=your_twitter_api_key_here

# API Secret (Consumer Secret)
TWITTER_API_SECRET=your_twitter_api_secret_here

# Access Token
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here

# Access Token Secret
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# =============================================================================
# POSTING SCHEDULE CONFIGURATION
# =============================================================================

# Day of the week to post (Monday, Tuesday, Wednesday, Thursday, Friday, Saturday, Sunday)
POSTING_DAY=Thursday

# Time to post (24-hour format: HH:MM)
POSTING_TIME=11:30

# Timezone for posting schedule
# Use IANA timezone names: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# Examples: America/New_York, America/Los_Angeles, Europe/London, Asia/Tokyo
POSTING_TIMEZONE=America/New_York

# =============================================================================
# POSTING BEHAVIOR CONFIGURATION
# =============================================================================

# Enable actual Twitter posting (true/false)
# Set to 'false' for testing/preview mode (simulated posting)
# Set to 'true' for production (actual posting to Twitter)
ENABLE_TWITTER_POSTING=false

# =============================================================================
# OPTIONAL: LOGGING & DEBUGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# Enable verbose output
# VERBOSE=false

